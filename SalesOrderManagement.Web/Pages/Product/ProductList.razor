@page "/Product/ProductList"
@inherits ProductBase
@inject NavigationManager navigationManager

<div>
    <a class="btn btn-primary" href='/Product/AddProduct'>Add New Data</a>
</div>
@if (Products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    int i = 1;
    <table class="table table-bordered table-hover">
        <tbody>
            @if (Products == null || Products.Count() == 0)
            {
                <tr>
                    <td colspan="4">
                        No Records to display
                    </td>
                </tr>
            }
            else
            {
                int j = 1;
                foreach (var product in Products)
                {
                    <tr>
                        <th style="width:1%">SL</th>
                        <th colspan="3">Product</th>
                    </tr>
                    <tr>
                        <td>@(i++)</td>
                        <td colspan="3">@product.ProductName</td>
                    </tr>
                    <tr>
                        <th>
                            SL
                        </th>
                        <th>
                            Attribute Type
                        </th>
                        <th>
                            Dimension
                        </th>
                        <th style="text-align:right">
                            Action
                        </th>
                    </tr>
                    foreach (var attr in product.DTOProductAttributes)
                    {

                        <tr>
                            <td>@(j++)</td>
                            <td>
                                @attr.ProductAttributeType
                            </td>
                            <td>
                                @attr.ActualDimension
                            </td>
                            <td style="text-align:right">
                                <button class="btn btn-primary" @onclick="@(() => NavigateToEditProduct(product.ProductId))">Edit</button>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}
@code {
    protected override async Task OnInitializedAsync()
    {
        Products = await ProductService.GetProducts();
    }
    private void NavigateToEditProduct(int id)
    {
        navigationManager.NavigateTo($"/Product/EditProduct/{id}");
    }
}

